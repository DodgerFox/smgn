.authreg
  position fixed
  left 0
  top 0
  right 0
  bottom 0
  background-color rgba(41, 54, 60, 0.64)
  z-index 12
  overflow-y scroll
  opacity 0
  pointer-events none
  t()
  &.fade
    pointer-events all
    opacity 1

  .wrap
    height 100%
    display flex
    align-items center
    justify-content center

  &-container
    width 673px
    height 492px
    position relative
    padding 20px
    border-radius 20px
    background-color #e2c38e
    box-shadow 6px 6px 15px 2px rgba(0, 0, 0, 0.21)
    display flex
    flex-direction column
    align-items center
    justify-content center
    +to-width(420px)
      height auto
      padding-bottom 40px
      padding-top 80px

  &-close
    position absolute
    top 26px
    right 26px
    height 45px
    width 45px
    cursor pointer
    svg
      width 100%
      t()

    &:hover
      svg
        fill white

    +to-width(420px)
      width 40px
      right 18px

  &__title
    color #333333
    text-transform uppercase
    font-size 50px
    font-weight 400
    font-family "Molodofont"
    margin-bottom 30px
    cursor pointer
    t()
    +to-width(560px)
      font-size 24px
    +to-width(420px)
      font-size 20px
      margin-right 30px


  &-form
    display flex
    flex-direction column
    align-items center
    width 100%

  &-input
    max-width 358px
    width 100%
    height 47px
    box-shadow 6px 6px 15px 2px rgba(0, 0, 0, 0.21)
    border-radius 24px
    background-color #ffffff
    border none
    margin-bottom 15px
    text-align center
    font-size 16px
    font-weight 500
    font-family Montserrat
    +to-width(420px)
      font-size 14px
      height 44px

  &-social
    display flex
    justify-content center
    padding-top 5px

    &__item
      width 42px
      height 42px
      border-radius 50%
      box-shadow 6px 6px 15px 2px rgba(0, 0, 0, 0.21)
      background-color #ffffff
      display flex
      justify-content center
      align-items center
      margin-right 18px
      t()
      &:last-child
        margin-right 0

      svg
        t()

      img
        max-width 24px
        max-height 24px

      &:nth-child(1)
        &:hover
          background-color #4a76a8
      &:nth-child(2)
        &:hover
          background-color #3B5899
      &:nth-child(3)
        &:hover
          background-color #27B7E9
      &:nth-child(4)
        &:hover
          background-color #E24028
      &:nth-child(5)
        &:hover
          background-color #F3832E
      &:nth-child(6)
        &:hover
          background-color #0A6599

      &:hover
        svg
          fill white

  &-buttons
    margin-top 30px
    display flex
    justify-content center
    align-items center

  &-button
    // box-shadow 6px 6px 15px 2px rgba(0, 0, 0, 0.21)
    border-radius 50px
    background-color #9dc19d
    padding 12px 32px
    font-size 14px
    font-weight 600
    font-family "Montserrat"
    color #141414
    border none
    margin-right 26px
    +to-width(420px)
      margin-right 17px

  &-forget
    color #141414
    font-size 12px
    font-weight 600
    font-family Montserrat
    cursor pointer
    t()
    &:hover
      opacity 0.7
