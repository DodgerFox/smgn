.wrong
  height 100vh
  background-image url("../images/main-bg.jpg")
  position relative
  &:after
    content ''
    position absolute
    left 0
    top 0
    right 0
    bottom 0
    background-color rgba(20, 20, 20, 0.35);

  .wrap
    display flex
    flex-direction column
    align-items center
    justify-content center
    height 100%
    z-index 2

  &__title
    font-size 270px
    font-weight 400
    letter-spacing 10px
    color #f7b197
    font-family Molodofont
    text-align center
    text-shadow 6px 3px 1px #b76d6d
    +to-width(1100px)
      font-size 210px
    +to-width(900px)
      font-size 180px
    +to-width(640px)
      font-size 180px

  &__text
    font-size 50px
    font-weight 400
    letter-spacing 1px
    color white
    font-family Molodofont
    text-align center
    margin-left 30px
    +to-width(1100px)
      font-size 42px
    +to-width(900px)
      font-size 36px
    +to-width(640px)
      font-size 30px
      line-height 36px
      margin-left 0
