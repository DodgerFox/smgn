.welcome
  height 100vh
  min-height 640px
  position relative
  background-image url('../images/page-bg-4.jpg')
  background-size cover
  background-position top center
  +to-width(767px)
    min-height 470px
  &:after
    content ''
    position absolute
    left 0
    top 0
    right 0
    bottom 0
    background-color rgba(0, 0, 0, 0.4)

  &:before
    content ''
    background-color #e2c38e
    position absolute
    left 0
    right 0
    bottom 0
    height 16px
    z-index 2

  .wrap
    height 100%
    z-index 2
    display flex
    flex-direction column
    justify-content center

  &-title
    color white
    max-width 900px
    font-size 56px
    line-height 74px
    font-weight 700
    font-family Montserrat
    letter-spacing 1.2px
    +to-width(1500px)
      font-size 50px
      line-height 66px
    +to-width(1100px)
      font-size 42px
      line-height 60px
    +to-width(640px)
      font-size 32px
      line-height 48px
    +to-width(320px)
      font-size 28px
      line-height 38px

  &-text
    color #ffffff
    margin-top 40px
    font-family "Playfair Display"
    font-size 24px
    font-weight 400
    font-style italic
    line-height 30px
    +to-width(1500px)
      margin-top 25px
    +to-width(640px)
      font-size 20px
    +to-width(420px)
      font-size 18px

  &-tags
    margin-top 65px
    display flex
    +to-width(767px)
      margin-top 30px

    &__item
      padding 10px 32px
      border-radius 30px
      margin-right 17px
      color white
      font-size 16px
      font-weight 600
      +to-width(1100px)
        font-size 14px
      +to-width(767px)
        font-size 11px
        padding 6px 20px

      &.red
        background-color #f5817f
      &.green
        background-color #9ab99a

    .article-tag__item
      padding 10px 32px
      border-radius 30px
      margin-right 17px
      color black
      font-size 12px
      font-weight 700
      height initial
      +to-width(1100px)
        font-size 14px
      +to-width(767px)
        font-size 11px
        padding 6px 20px

      &:before
        content '#'
        font-size 16px

  &-info
    position absolute
    bottom 40px
    right 0
    display flex
    +to-width(375px)
      right inherit
      left 20px
    &__item
      display flex
      align-items center
      color white
      margin-right 30px
      +to-width(375px)
        margin-right 24px

      img
        max-height 30px
        max-width 27px

      p
        font-size 14px
        font-weight 500
        margin-left 10px
        margin-top 1px
        +to-width(375px)
          font-size 12px
