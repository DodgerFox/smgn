.change
  width 100%
  background-image url('../images/background-item.png')
  background-position bottom center
  background-size cover
  background-color #f1f0d6
  min-height 100vh
  padding-top 80px
  display none
  +to-width(992px)
    background-position-x -600px
    background-position-y bottom
    overflow hidden
    overflow-y scroll
    padding-top 60px
  +to-width(767px)
    position absolute
    top 0
    left 0



  &-button
    background-color #009e82
    border-radius 3px
    display block
    color white
    width fit-content
    padding 15px 28px
    color #feffff
    font-size 18px
    font-weight 500
    box-shadow 4px 4px 50px rgba(0, 158, 130, 0)
    cursor pointer
    transition 0.3s box-shadow
    &:hover
      box-shadow 4px 4px 50px rgba(0, 158, 130, 0.5)

  &-item
    padding-top 88px
    max-width 680px
    position absolute
    transform translateX(0%)
    transition .4s transform
    +to-width(1300px)
      padding-top 60px
    +to-width(992px)
      padding-bottom 150px
      max-width 400px
    +to-width(767px)
      position relative
      padding-top 15px
      padding-left 26px
      padding-right 15px
      padding-bottom 270px
      max-width inherit
      margin-left -15px
      margin-right -15px
      margin-bottom 20px
      background-image url('../images/bg-mobile.png')
      background-position bottom right
      background-size 100%
      background-repeat no-repeat

    &.hidden
      transform translateX(-150%)
      +to-width(767px)
        transform translateX(0)
        display none

    p
      font-size 18px
      font-weight 300
      line-height 24px
      color #1c1c1c
      padding-bottom 47px
      +to-width(767px)
        font-size 16px
        line-height 20px
        padding-bottom 30px

    h3
      color #171717
      padding-bottom 30px
      font-size 24px
      font-weight 300
      +to-width(767px)
        padding-bottom 26px

    ul,ol
      color #1d1d1d
      font-size 18px
      font-weight 300
      padding-bottom 25px
      line-height 20px
      +to-width(767px)
        font-size 16px
        padding-bottom 0

    ol
      li
        padding-bottom 25px
        position relative
        padding-left 30px
        +to-width(767px)
          padding-bottom 20px
        &:before
          position absolute
          left 0
          top 0px
          font-size 32px
          color #00b596
          font-weight 300

        &:nth-child(1)
          &:before
            content '1'
        &:nth-child(2)
          &:before
            content '2'
        &:nth-child(3)
          &:before
            content '3'
        &:nth-child(4)
          &:before
            content '4'
        &:nth-child(5)
          &:before
            content '5'
        &:nth-child(6)
          &:before
            content '6'
