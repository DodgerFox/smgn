body
	position relative
	min-width 320px
	width 100%
	color #141414
	font-weight bold
	transition 1s background
	background-color white
	// -webkit-font-smoothing none
  // -webkit-tap-highlight-color rgba(0, 0, 0, 0)
	&.colored
		background #f1f0d6

	&.fixed
		overflow hidden


html
	font-family Montserrat, Arial, sans-serif
	font-size 62.5%
	line-height 1.4
	letter-spacing 0
	min-width 320px
	margin-left auto
	margin-right auto



.wrap
	position relative
	padding 0 30px
	width 100%
	margin-left auto
	margin-right auto
	max-width 1400px
	+to-width(767px)
		padding 0 15px



.main
	display flex
	flex-direction column
	min-height 100vh
	position relative
	z-index 2

.green
	background-color #aaccaa!important
.red
	background-color #fb8e8d!important
.blue
	background-color #78bcdc!important
